#for linting
dnf_apps+=(yamllint)

#Text editors, language-servers, and interpreters
dnf_apps+=(kakoune kak-lsp python3-jupyterconsole xeus-devel)
dnf_apps+=(zeromq-devel rocs ccls)

#exploring code visualization and generation
dnf_apps+=(graphviz doxygen plantuml plantuml-javadoc)
dnf_apps+=(umbrello)

#for python workflow
dnf_apps+=(python3-jedi python3-black ipython3)
