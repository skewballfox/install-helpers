#!/bin/bash

#for post reboot
sudo dnf install https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm

if [[ $(lspci | grep 'VGA\|3d\|2d')== *"Nvidia"* ]]; then
    sudo dnf config-manager --add-repo=https://negativo17.org/repos/fedora-nvidia.repo   
fi

sudo dnf upgrade

flatpack_apps=()
enable_apps=()
dnf_apps=()
kde_apps=()
enable_apps+=(evana/fira-code-fonts  vishalvvr/fontawesome-fonts pschyska/alacritty  gregw/i3desktop)
enable_apps+=(daftaupe/gopass atim/leftwm atim/hunter gregw/i3desktop luminoso/Signal-Desktop)

############################# system_administration ##################################
######################################################################################

#TODO check out this guide
#https://www.tecmint.com/linux-networking-commands/

#system administration and security
dnf_apps+=(dnf-automatic lynis chkrootkit clamav clamtk clamav-unofficial-sigs fail2ban sendmail) #labrea)

dnf_apps+=(policycoreutils-sandbox psad fwsnorti pciutils)

#for performance monitoring
dnf_apps+=(glances htop hyperfine)

#yubikey support
dnf_apps+=(ykpers fedora-packager-yubikey yubikey-manager pam_yubico)

############################# General System #########################################
######################################################################################

#GUI
dnf_apps+=(i3-gaps feh dunst i3status-rs picom network-manager-applet)
dnf_apps+=(redshift dmenu xbacklight conky python3-speedtest-cli)
dnf_apps+=(lm_sensors elementary-icon-theme mint-x-icons rofi)

kde_apps+=(klamav leftwm kde-connect kde-settings kde-gtk-config kdepim)
kde_apps+=(kf5-krunner kiodrive)

#terminal and sundry
dnf_apps+=(alacritty tmux ranger hunter fish bat mupdf ripgrep)#may remove ranger in the future
dnf_apps+=(task vit tasksh timew taskopen)

#i3
#dnf_apps+=(compton i3-gaps i3lock-color i3-ipc i3blocks dunst feh network-manager-applet)

#note: check this out later: https://github.com/altdesktop/i3ipc-python
#fonts
dnf_apps+=(fira-code-fonts fontawesome-fonts mathjax)

#common packages
dnf_apps+=(anki p7zip gopass chromium-browser-privacy)

#email
#dnf_apps+=(thunderbird thunderbird-lightning)

#firefox 
dnf_apps+=(mozilla-ublock-origin uget mozilla-https-everywhere)

#offline documentation
dnf_apps+=(kiwix-lib-devel kiwix-desktop kiwix-tools zeal javadocofflinesearch javadocofflinesearch-javadoc)
#################################### Programming #####################################
######################################################################################

#for building
dnf_apps+=(cmake java-latest-openjdk-devel glib2-devel gcc-c++ node llvm guava)

